{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AthenaAccess",
            "Effect": "Allow",
            "Action": [
                "athena:CreateWorkGroup",
                "athena:GetWorkGroup",
                "athena:UpdateWorkGroup",
                "athena:DeleteWorkGroup",
                "athena:StartQueryExecution",
                "athena:GetQueryResults",
                "athena:GetQueryExecution",
                "athena:TagResource",
                "athena:ListWorkGroups",
                "athena:ListTagsForResource"
            ],
            "Resource": [
                "arn:aws:athena:sa-east-1:572422066503:workgroup/orion-dev-wg"
            ]
        },
        {
            "Sid": "AllowGlueUpdateJob",
            "Effect": "Allow",
            "Action": "glue:UpdateJob",
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "AllowGlueCreateScript",
            "Effect": "Allow",
            "Action": "glue:CreateScript",
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "AllowGlueCreateJob",
            "Effect": "Allow",
            "Action": "glue:CreateJob",
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "AllowGlueJobFullAccess",
            "Effect": "Allow",
            "Action": [
                "glue:CreateScript",
                "glue:GetJob",
                "glue:GetJobRun",
                "glue:GetJobs",
                "glue:ListJobs"
            ],
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "AllowGlueTagJob",
            "Effect": "Allow",
            "Action": "glue:TagResource",
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "AllowGlueGetJob",
            "Effect": "Allow",
            "Action": "glue:GetJob",
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/oracle-to-parquet-partitioned"
        },
        {
            "Sid": "CatalogCreateDatabase",
            "Effect": "Allow",
            "Action": "glue:CreateDatabase",
            "Resource": "*"
        },
        {
            "Sid": "CatalogGetDatabase",
            "Effect": "Allow",
            "Action": [
                "glue:GetDatabase",
                "glue:GetDatabases",
                "glue:DeleteDatabase",
                "glue:DeleteTable",
                "glue:DeleteUserDefinedFunction"
            ],
            "Resource": [
                "arn:aws:glue:sa-east-1:572422066503:catalog",
                "arn:aws:glue:sa-east-1:572422066503:database/*",
                "arn:aws:glue:sa-east-1:572422066503:table/*/*",
                "arn:aws:glue:sa-east-1:572422066503:userDefinedFunction/*/*"
            ]
        },
        {
            "Sid": "TableAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetTable",
                "glue:GetTables"
            ],
             "Resource": [
                "arn:aws:glue:sa-east-1:572422066503:catalog",
                "arn:aws:glue:sa-east-1:572422066503:database/orion-datahub-streaming",
                "arn:aws:glue:sa-east-1:572422066503:table/orion-datahub-streaming/*"
            ]
        },
        {
            "Sid": "CrawlerAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetClassifier",
                "glue:GetClassifiers",
                "glue:GetConnection",
                "glue:GetConnections",
                "glue:GetCrawler",
                "glue:GetCrawlers",
                "glue:CreateCrawler",
                "glue:TagResource",
                "glue:DeleteCrawler",
                "glue:UpdateCrawler"
            ],
            "Resource": [
                  "arn:aws:glue:sa-east-1:572422066503:crawler/*"
            ]
        },
        {
            "Sid": "JobAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetJob",
                "glue:GetJobs"
            ],
            "Resource": "arn:aws:glue:sa-east-1:572422066503:job/*"
        },
        {
            "Sid": "GeneralGlueActions",
            "Effect": "Allow",
            "Action": [
                "glue:GetDataCatalogEncryptionSettings",
                "glue:GetTags"
            ],
            "Resource": "*"
        },
        {
            "Sid": "GlueConnectionAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetConnection",
                "glue:GetConnections"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowCloudWatchLogsForGlue",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogGroups",
                "logs:DescribeLogStreams"
            ],
            "Resource": [
                "arn:aws:logs:sa-east-1:572422066503:log-group:/aws-glue/crawlers",
                "arn:aws:logs:sa-east-1:572422066503:log-group:/aws-glue/crawlers:log-stream:*",
                "arn:aws:logs:sa-east-1:572422066503:log-group:/aws-glue/crawlers:log-stream:orion-statements-crawler"
            ]
        },
        {
            "Sid": "AllowS3AccessForCrawler",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::orion-datahub-statements-dev",
                "arn:aws:s3:::orion-datahub-statements-dev/statements/raw/*"
            ]
        },
        {
            "Sid": "AllowGlueCreateTable",
            "Effect": "Allow",
            "Action": "glue:CreateTable",
            "Resource": [
                "arn:aws:glue:sa-east-1:572422066503:catalog",
                "arn:aws:glue:sa-east-1:572422066503:database/orion-datahub-streaming",
                "arn:aws:glue:sa-east-1:572422066503:table/orion-datahub-streaming/*"
            ]
        },
        {
            "Sid": "AllowGlueBatchGetPartition",
            "Effect": "Allow",
            "Action": "glue:BatchGetPartition",
            "Resource": [
                "arn:aws:glue:sa-east-1:572422066503:catalog",
                "arn:aws:glue:sa-east-1:572422066503:database/orion-datahub-streaming",
                "arn:aws:glue:sa-east-1:572422066503:table/orion-datahub-streaming/*"
            ]
        },
        {
            "Sid": "AllowGlueBatchCreatePartition",
            "Effect": "Allow",
            "Action": "glue:BatchCreatePartition",
            "Resource": [
                "arn:aws:glue:sa-east-1:572422066503:catalog",
                "arn:aws:glue:sa-east-1:572422066503:database/orion-datahub-streaming",
                "arn:aws:glue:sa-east-1:572422066503:table/orion-datahub-streaming/*"
            ]
        }

    ]
}